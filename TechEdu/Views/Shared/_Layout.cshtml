<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"] - TechEdu</title>

    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body class="background-default h-100">
    <div class="min-vh-100 d-flex flex-column justify-content-between">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark background-primary">
                <div class="container-fluid fs-4">
                    <a class="navbar-brand fs-4" href="/page/master/main.html">
                        TechEdu
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex justify-content-between" id="navbarNavDropdown">
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page"
                                   asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Turmas
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Classes" asp-action="Index">Turmas</a>
                                    </li>
                                    <li><a class="dropdown-item" asp-controller="Students" asp-action="Index">Alunos</a></li>
                                    <li><a class="dropdown-item" href="#">Notas</a></li>
                                    <li><a class="dropdown-item" href="#">Horários</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Teachers">Professores</a>
                            </li>
                        </ul>
                        <div class="navbar-nav">
                            <form asp-controller="Home" asp-action="Create">
                            </form>
                            <div class="nav-item dropdown dropstart w-auto">
                                <a class="nav-link dropdown-toggle" asp-controller="Home" asp-action="Index" id="navbarDropdownMenuLink" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle pe-3"></i>José Silva
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <div class="px-3 pb-3 d-flex align-items-center">
                                        <div class="pe-3">
                                            <i class="bi bi-person-circle fs-3"></i>
                                        </div>
                                        <div>
                                            <span class="fs-3">José silva</span>
                                            <span class="fs-5 text-muted">Jose.silva@outlook.com</span>
                                        </div>
                                    </div>
                                    <li><a class="dropdown-item" href="#">Minha conta</a></li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>
                                    <li><button class="dropdown-item" type="submit">Sair</button></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container my-5">
                @RenderBody()
            </div>
        </main>
        <footer class="footer py-3 background-primary bottom-0 w-100">
            <div class="container text-center">
                <span class="text-light">Powered By: TechEdu Solutions 2022</span>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
