@model IEnumerable<TechEdu.Models.DataAccess.DataObjects.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-first mb-5 border-bottom">Alunos</h1>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle table-bordered caption-top">
                <caption>Lista de alunos</caption>
                <thead class="background-primary text-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ra)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PrimeiroNome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UltimoNome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Turma)
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ra)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PrimeiroNome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UltimoNome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Turma.Nome)
                            </td>
                            <td class="w-auto">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark">
                                    <i class="bi bi-pencil"></i>Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash3"></i>Apagar
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p class="my-3">
    <a asp-action="Create" class="btn btn-success">Criar novo aluno</a>
</p>
