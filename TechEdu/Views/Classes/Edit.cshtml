@model TechEdu.Models.DataAccess.DataObjects.Turma

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Turma</h4>
<hr />
<section class="altera">
    <div class="altera__container wrapper">
        <h2 class="altera__heading">Alterar Usuário</h2>
        <div class="alterar__content">
            <form asp-action="Edit" class="a-form">
                <input type="hidden" asp-for="Id" />
                <div class="cadastro__box">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="cadastro__box">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>

<div>
    <a asp-action="Index">Ver todas as turmas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
