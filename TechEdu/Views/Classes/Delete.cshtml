@model TechEdu.Models.DataAccess.DataObjects.Turma

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Você tem certeza que quer apagar essa turma?</h3>
<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Ver todas as turmas</a>
    </form>
</div>
