@model IEnumerable<TechEdu.Models.DataAccess.DataObjects.Turma>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-first mb-5 border-bottom">Turmas</h1>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle caption-top">
                <caption>Lista de turmas</caption>
                <thead class="background-primary text-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-flex justify-content-between">
                                @Html.DisplayFor(modelItem => item.Nome)
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash3"></i> Apagar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p class="my-3">
    <a asp-action="Create" class="btn btn-success">Criar nova turma</a>
</p>
